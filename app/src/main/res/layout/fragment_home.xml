<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bluezone_1"
                android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#A50707"
                android:id="@+id/tv_F1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn là F1\n Liên hệ cơ quan y tế gần nhất để được hướng dẫn cách ly"/>
            <TextView
                android:gravity="center"
                android:textSize="60dp"
                android:textColor="#071FA5"
                android:id="@+id/tv_device_scaned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người dùng quanh bạn"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btn_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quét người dùng quanh"
                android:drawableLeft="@drawable/scan"
                android:textSize="15dp"
                android:background="@drawable/background1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btn_expose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử tiếp xúc"
                android:drawableLeft="@drawable/people"
                android:textSize="15dp"
                android:background="@drawable/background2"
                android:layout_margin="5dp"/>
<!--            <Button-->
<!--                android:id="@+id/btn_location"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Lịch sử di chuyển"-->
<!--                android:drawableLeft="@drawable/location"-->
<!--                android:textSize="15dp"-->
<!--                android:background="@drawable/background3"-->
<!--                android:layout_margin="5dp"/>-->
        </LinearLayout>
    </LinearLayout>
</FrameLayout>